<?xml version="1.0" encoding="utf-8"?>

<resources>
    <attr name="icon" format="reference" />
    <attr name="text" format="reference" />
    <attr name="submenu" format="reference" />
    <attr name="numLabels" format="integer" />
    <attr name="itemPadding" format="dimension" />

    <declare-styleable name="ToolBarView">
        <attr name="size" format="dimension|reference" />
        <attr name="textAppearance" format="reference" />
        <attr name="editTextAppearance" format="reference" />
        <attr name="android:colorBackground" />
    </declare-styleable>

    <declare-styleable name="NavBarView">
        <attr name="position" format="enum">
            <enum name="BOTTOM" value="0" />
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
        </attr>
        <attr name="tint" />
        <attr name="size" />
        <attr name="textAppearance" />
        <attr name="android:colorBackground" />
    </declare-styleable>

    <declare-styleable name="FloatingButton">
        <attr name="borderWidth" />
        <attr name="borderColor" format="color|reference" />
        <attr name="borderFocusColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="PreferenceView">
        <attr name="android:textColor" />
        <attr name="android:textColorHint" />
        <attr name="titleTextAppearance" format="reference" />
        <attr name="subtitleTextAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="DialogView">
        <attr name="listLayout" />
        <attr name="singleChoiceItemLayout" />
    </declare-styleable>

    <declare-styleable name="OverlayMenuView">
        <attr name="colorPrimarySurface" />
        <attr name="android:colorBackground" />
    </declare-styleable>

    <declare-styleable name="OverlayMenuItemView">
        <attr name="icon" />
        <attr name="text" />
        <attr name="tint" />
        <attr name="submenu" />
        <attr name="itemPadding" />
        <attr name="android:textColor" />
        <attr name="android:textAppearance" />
    </declare-styleable>

    <declare-styleable name="OutlinedLinearLayout">
        <attr name="backgroundColor" />
        <attr name="boxStrokeColor" />
        <attr name="boxStrokeWidth" />
        <attr name="cornerRadius" />
        <attr name="numLabels" />
    </declare-styleable>

    <declare-styleable name="OutlinedConstraintLayout">
        <attr name="backgroundColor" />
        <attr name="boxStrokeColor" />
        <attr name="boxStrokeWidth" />
        <attr name="cornerRadius" />
        <attr name="numLabels" />
    </declare-styleable>

    <declare-styleable name="ListView">
        <attr name="tint" />
        <attr name="background" />
        <attr name="android:textColor" />
        <attr name="android:textAppearance" />
    </declare-styleable>

    <declare-styleable name="FileListView">
        <attr name="fileIcon" format="reference" />
        <attr name="folderIcon" format="reference" />
    </declare-styleable>

</resources>
